<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net5.0</TargetFramework>
    <Authors>John Muraski</Authors>
    <Company>Fiddlers Green Software</Company>
    <Description>An API library to retrieve data from the NOAA Metar API, and then provide methods to parse the data and save and filter data through Entity Framework. This version is designed to work with a PostgresSQL database.</Description>
    <Version>0.2.4</Version>
    <PackageReleaseNotes>Added a MetarData context class that can be used in a DI role.</PackageReleaseNotes>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Npgsql.EntityFrameworkCore.PostgreSQL" Version="5.0.10" />
  </ItemGroup>

</Project>
